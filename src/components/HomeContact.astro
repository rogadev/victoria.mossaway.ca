---
import { phone, address, email } from '../consts/contact'
import ButtonCTA from './ButtonCTA.astro'
---

<section class='bg-white py-12'>
  <div class='max-w-6xl mx-auto px-6'>
    <h2 class='text-3xl font-bold mb-8 text-center'>Contact Us</h2>
    <div class='grid grid-cols-1 md:grid-cols-2 gap-8'>
      <div class='flex flex-col gap-4'>
        <p class='text-gray-700 mb-4'>
          Do you have a question about our services or want to request a quote?
          Fill out our contact form and we'll get back to you as soon as
          possible.
        </p>
        <ButtonCTA href='/contact'>Get in Touch</ButtonCTA>
      </div>
      <div>
        <p class='text-gray-700 mb-4'>
          <strong>Address:</strong> 123 Main St, Victoria, BC V8W 2J5
        </p>
        <p class='text-gray-700 mb-4'>
          <strong>Phone:</strong>
          <a href={`tel:${phone.primary}`}></a>{phone.primary}
        </p>
        <p class='text-gray-700 mb-4'>
          <strong>Email:</strong>
          {email.primary}
        </p>
        <p class='text-gray-700 mb-4'>
          <strong>Business Hours:</strong> Monday-Friday 9am-5pm
        </p>
      </div>
    </div>
  </div>
</section>
