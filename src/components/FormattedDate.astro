---
export interface Props {
  date: Date | string
}

const { date } = Astro.props
const dateForSure = new Date(date)
---

<time datetime={dateForSure.toISOString()}>
  {
    dateForSure.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
