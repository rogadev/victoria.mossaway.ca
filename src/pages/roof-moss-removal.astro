---
import RequestQuoteForm from '../components/WebForm.astro'
import CTAButton from '../components/ButtonCTA.astro'
import CancelButton from '../components/ButtonCancel.astro'
import PrimaryButton from '../components/PrimaryButton.astro'
import Testimonial from '../components/Testimonial.astro'
import InfoSectionLeft from '../components/InfoSectionL.astro'
import InfoSectionRight from '../components/InfoSectionR.astro'
import BaseLayout from '../layouts/BaseLayout.astro'
import { mossRemoval } from '../consts/pages'
const { h1, h2, title, description, bgImage, overlayColor, overlayIntensity } =
  mossRemoval
---

<BaseLayout
  h1={h1}
  h2={h2}
  title={title}
  description={description}
  bgImage={bgImage}
  overlayColor={overlayColor}
  overlayIntensity={overlayIntensity}
>
  <section id='services'>
    <h2>Our Services</h2>
    <InfoSectionLeft
      imageSrc='https://via.placeholder.com/800x600'
      imageAlt='Service 1'
      heading='Service 1'
      description='Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero.'
    />
    <InfoSectionRight
      imageSrc='https://via.placeholder.com/800x600'
      imageAlt='Service 2'
      heading='Service 2'
      description='Sed cursus ante dapibus diam. Sed nisi. Nulla quis sem at nibh elementum imperdiet.'
    />
    <InfoSectionLeft
      imageSrc='https://via.placeholder.com/800x600'
      imageAlt='Service 3'
      heading='Service 3'
      description='Duis sagittis ipsum. Praesent mauris. Fusce nec tellus sed augue semper porta.'
    />
  </section>

  <RequestQuoteForm />

  <section id='testimonials'>
    <h2>Testimonials</h2>
    <Testimonial
      photoSrc='https://via.placeholder.com/100x100'
      customerName='John Doe'
      quote='Roof Moss Removal did a fantastic job! Our roof looks brand new!'
    />
    <Testimonial
      photoSrc='https://via.placeholder.com/100x100'
      customerName='Jane Smith'
      quote='The team was professional and efficient. Highly recommend their services.'
    />
  </section>

  <section id='cta'>
    <h2>Ready to get started?</h2>
    <CTAButton text='Get a Free Quote' />
  </section>

  <section id='buttons'>
    <PrimaryButton text='Primary' />
    <CancelButton text='Cancel' />
  </section>
</BaseLayout>
